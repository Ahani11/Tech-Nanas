<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />



    <application
        android:name=".TechNanasApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechNanas"
        android:usesCleartextTraffic="true">


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />



        <activity android:name=".ui.profile.EditProfileActivity" />
        <activity android:name=".ui.announcements.AnnouncementDetailActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.profile.SettingsActivity" />
        <activity android:name=".ui.farm.MyFarmsActivity" />
        <activity android:name=".ui.farm.EditFarmActivity" />
        <activity android:name=".ui.farm.MapPickerActivity" />
        <activity android:name=".ui.announcements.AddEditAnnouncementActivity" />
        <activity android:name=".ui.entrepreneur.EntrepreneurListActivity" />
        <activity android:name=".ui.entrepreneur.EntrepreneurDetailActivity" />
        <activity
            android:name=".ui.announcements.MyAnnouncementsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.entrepreneur.EntrepreneurProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.profile.EditSocialLinksActivity"
            android:exported="false" />




        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>